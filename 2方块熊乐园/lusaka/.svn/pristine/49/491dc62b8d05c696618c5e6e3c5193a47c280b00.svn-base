<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<include file="public:meta" />
		<link href="../public/css/company/common.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_resumes.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_ajax_dialog.css" rel="stylesheet" type="text/css" />
		<script src="../public/js/company/jquery.common.js" type="text/javascript" language="javascript"></script>
	</head>
	<body>
		<include file="index_header" />
		<div class="user_main">
			<div class="mleft">
				<include file="left_resumes" /> 
			</div>
			<div class="mright">
				<div class="user_pagetitle">
					<div class="pat_l">APPLYS</div>
					<!--<div class="pat_r">系统保留三个月的记录，共<strong> {$apply_list['count']} </strong>条</div>-->
					<div class="clear"></div>
				</div>
				<div class="user_tab">
					<a href="{:U('jobs_apply')}" class="tabli <if condition="$is_reply eq 0">select</if>" >In Review</a>
					<a href="{:U('jobs_apply',array('is_reply'=>1))}" class="tabli <if condition="$is_reply eq 1">select</if>">Reviewed</a>
					<div class="clear"></div>
					<div class="btnbox resume_list"><div class="btn_yellow J_hoverbut" onclick="window.open('{:url_rewrite('QS_resumelist')}')">Search</div></div>
				</div>
				<div class="resume_receive_select">
					<div class="left">
						<div class="td1">POSITION:</div>
						<div class="td2">
							<div class="input_140_30_div J_hoverinput J_dropdown J_listitme_parent">
								<span class="J_listitme_text line_substring">
									<if condition="$jobs_id eq 0">
										All
									<else />
										{$jobs_list[$jobs_id]}
									</if>
								</span>
								<div class="dropdowbox6 J_dropdown_menu">
						            <div class="dropdow_inner6">
						                <ul class="nav_box">
						                	<li><a class="J_listitme" href="{:P(array('jobs_id'=>0))}" >Aall</a></li>
						                	<volist name="jobs_list" id="vo">
						                	<li><a class="J_listitme" href="{:P(array('jobs_id'=>$key))}" title="{$vo}">{$vo}</a></li>
						                	</volist>
						                </ul>
						            </div>
						        </div>
							</div>
						</div>
						<div class="td3">
							<label><input type="checkbox" <if condition="$Think.get.stop eq '1'">checked="checked"</if> url="<if condition="$Think.get.stop eq '1'">{:U('jobs_apply',array('is_reply'=>$is_reply,'stop'=>0))}<else />{:U('jobs_apply',array('is_reply'=>$is_reply,'stop'=>1))}</if>" class="jump">Include Completed</label>
						</div>
						<div class="clear"></div>
						<div class="td1">FROM:</div>
						<div class="radio_list">
							<div class="li jump <if condition="!$Think.get.is_apply || $Think.get.is_apply eq '0'">checked</if>" url="{:P(array('is_apply'=>0))}">All</div>
							<div class="li jump <if condition="$Think.get.is_apply eq '2'">checked</if>" url="{:P(array('is_apply'=>2))}">Apply</div>
							<div class="li jump <if condition="$Think.get.is_apply eq '1'">checked</if>" url="{:P(array('is_apply'=>1))}">Delegate</div>
							<div class="clear"></div>
						</div>
						<div class="clear"></div>
					</div>
					<div class="right">
						<div class="time">Last 2 Weeks<span>（{$date}&nbsp;-&nbsp; to now）</span></div>
						<div class="statistics">
							<div class="td1">
								<div class="val">{$count[1]}</div>REVIEWED
							</div>
							<div class="line"></div>
							<div class="td1">
								<div class="val">{$count[0]}</div>APPLY
							</div>
							<div class="line"></div>
							<div class="td1">
								<div class="val">{$count[2]}%</div>RATE
							</div>
						</div>
					</div>
					<div class="clear"></div>
				</div>
				<div class="resume_receive_th">
					<if condition="$is_reply eq 0">
	    				<div class="th7">
	    					Status
						</div>
					<else />
						<div class="th1">
							<div class="input_90_30_div J_hoverinput J_dropdown J_listitme_parent">
								<span class="J_listitme_text">
									<if condition="$state eq 0">
										Status
									<else />
										{$state_arr[$state]}
									</if>
								</span>
								<div class="dropdowbox11 J_dropdown_menu">
						            <div class="dropdow_inner11">
						                <ul class="nav_box">
						                	<li><a class="J_listitme" href="{:P(array('state'=>0))}" >All</a></li>
						                	<volist name="state_arr" id="vo">
						                	<li><a class="J_listitme" href="{:P(array('state'=>$key))}" >{$vo}</a></li>
					 	                	</volist>
						                </ul>
						            </div>
						        </div>
							</div>
						</div>
					</if>
    				<div class="th2">Name</div>
    				<div class="th3">Detail</div>
    				<div class="th4">Position</div>
    				<div class="th5">
    					<div class="input_90_30_div J_hoverinput J_dropdown J_listitme_parent">
							<span class="J_listitme_text">
								<if condition="$Think.get.settr eq 0">
									Time
								<else />
									 In{$Think.get.settr} Days
								</if>
							</span>
							<div class="dropdowbox11 J_dropdown_menu">
					            <div class="dropdow_inner11">
					                <ul class="nav_box">
					                	<li><a class="J_listitme" href="{:P(array('settr'=>0))}" >All</a></li>
					                	<li><a class="J_listitme" href="{:P(array('settr'=>3))}" >In 3 Days</a></li>
					                	<li><a class="J_listitme" href="{:P(array('settr'=>7))}" >In 7 Days</a></li>
					                	<li><a class="J_listitme" href="{:P(array('settr'=>15))}" >In 15 Days</a></li>
					                	<li><a class="J_listitme" href="{:P(array('settr'=>30))}" >In 1 Month</a></li>
					                </ul>
					            </div>
					        </div>
						</div>
    				</div>
    				<div class="th6"></div>
    				<div class="clear"></div>
    			</div>
				<form id="form1" action="{:U('del_jobs_apply')}" method="post" class="J_allListBox">
				<notempty name="apply_list['list']">
				<volist name="apply_list['list']" id="vo">
				<div class="resume_receive" did="{$vo['did']}">
					<if condition="$vo['fullname']">
	    				<div class="td1">
							<div class="input">
								<input name="y_id[]" class="J_allList" type="checkbox" value="{$vo['did']}" resume_id="{$vo['resume_id']}"> &nbsp;
							</div>
	    					<div class="look_icon <if condition="$vo['personal_look'] eq 1">unlook</if>" title="<if condition="$vo['personal_look'] eq 1">Unviewed<else/>Viewed</if>"></div>
	    					<div title="<if condition="$vo['is_reply'] gt 0">{$state_arr[$vo['is_reply']]}</if>" class="replay_icon J_dropdown <if condition="$vo['is_reply'] gt 0">s{$vo['is_reply']}</if>">
							<div class="dropdowboxapply J_dropdown_menu">
					            <div class="dropdow_innerapply">
					                <ul class="nav_box">
					                	<volist name="state_arr" id="st">
					                	<li><a class="J_listitme label_resume s{$key}" href="{:U('company_label_resume_apply',array('y_id'=>$vo['did'],'state'=>$key))}" >{$st}</a></li>
					                	</volist>
					                </ul>
					            </div>
					        </div>
	    					</div>
	    					<div class="clear"></div>
	    				</div>
						<div class="td2 link_blue substring"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$vo['resume_id'],'jobs_id'=>$vo['jobs_id'],'from_apply'=>1))}">{$vo['fullname']}</a></div>
	    				<div class="td3">{$vo['age']}岁/{$vo['sex_cn']}/{$vo['education_cn']}/{$vo['experience_cn']}</div>
	    				<div class="td4 link_blue substring"><a target="_blank" href="{$vo.jobs_url}">{$vo['jobs_name_']}</a></div>
	    				<div class="td5">{:fdate($vo['apply_addtime'])}</div>
	    				<div class="td6 link_blue J_tooltip">
	    					<a href="javascript:;" class="clink">TO »</a>
	    					<div class="dropdowbox2 J_tooltip_menu">
					            <div class="dropdow_inner2">
					                <ul class="nav_box">
					                    <li><a class="J_interview" href="javascript:;" resume_id="{$vo['resume_id']}">Invite</a></li>
					                    <li><a class="J_del_resume" href="javascript:;" url="{:U('company/del_jobs_apply',array('y_id'=>$vo['did']))}">Delete</a></li>
					                </ul>
					            </div>
					        </div>
	    				</div>
    				<else />
						<div class="td1 empty">
							<div class="input">
								<input name="y_id[]" class="J_allList" type="checkbox" value="{$vo['did']}"> &nbsp;This resume is not exist
							</div>
	    				</div>
	    				<div class="td6 link_blue"><a href="javascript:;" url="{:U('company/del_jobs_apply',array('y_id'=>$vo['did']))}" class="clink J_del_resume">Delete</a></div>
    				</if>
    				<div class="clear"></div>					
				</div>
				</volist>
				<div class="resume_but">
		 			<div class="td1"><input class="J_allSelected" type="checkbox" value="" /></div>
		 			<div class="td2">
		 				<div class="btn_blue J_hoverbut btn_inline" id="save_as_doc_word">Save</div>
				  		<!--div class="btn_blue J_hoverbut btn_inline" id="send_to_email">Send to 转发到邮箱</div-->
						<div class="btn_lightgray J_hoverbut btn_inline" id="deleteall">Delete</div>
		 			</div>
		 			<div class="clear"></div>
	    		</div>
				<div class="qspage">{$apply_list['page']}</div>
				<else />
					<if condition="$hasget">
					<div class="res_empty">
						Sorry, No Resume is Found.
					</div>
					<else />
					<div class="res_empty link_blue">
						Resumes are not enough? <a href="{:url_rewrite('QS_resume')}" target="_blank">Search Now</a><br />
					</div>
					</if>
				</notempty>
				</form>
			</div>
		</div>
		<include file="index_footer" />
		<script type="text/javascript" src="../public/js/laydate/laydate.js"></script>
		<script type="text/javascript" src="../public/js/jquery.allselected.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$(".label_resume").click(function(){
					var url = $(this).attr('href');
					$.getJSON(url,function(result){
						if(result.status==1){
							if(result.data!=0){
								disapperTooltip("goldremind", '处理3天内收到的简历增加'+result.data+'{:C('qscms_points_byname')}<span class="point">+'+result.data+'</span>');
							}else{
								disapperTooltip('success',result.msg);
							}
							setTimeout(function () {
		                        window.location.reload();
		                    }, 2000);
						}else{
							disapperTooltip('remind', result.msg);
						}
					});
					return false;
				});
				$(".jump").click(function(){
					location.href=$(this).attr('url');
				});
				$("#save_as_doc_word").click(function(){
					var $checkArr = $('.J_allList:checked');
					if($checkArr.length<=0){
						disapperTooltip('remind', 'Please select a resume');
						return false;
					}
					var valArr = new Array();
					$.each($checkArr, function(){
						if($(this).attr('resume_id')){
							valArr.push($(this).attr('resume_id'));
						}
					});
					if(valArr.length == 0){
						disapperTooltip('remind','The resume is not exist!');
						return false;
					}
					$("#form1").attr('action',"{:U('resume_doc_for_apply')}");
					$("#form1").attr('target',"_blank");
					$("#form1").submit();
				});
				$(".J_del_resume").click(function () {
		            var url = $(this).attr('url');
		            var qsDialog = $(this).dialog({
				        title: 'Delete resumes',
		                loading: true,
		                border: false,
		                footer: false
		            });
		            $.getJSON(url, function (result) {
		                if (result.status == 1) {
		                	qsDialog.hide();
		                	var qsDialogSon = $(this).dialog({
				                title: 'Delete resumes',
				                content: result.data.html,
				                border: false,
				                yes: function () {
				                    window.location.href = url;
				                }
				            });
		                } else {
		                	qsDialog.hide();
		                    disapperTooltip('remind', result.msg);
		                }
		            });
		        });
				// 批量删除
		        $('#deleteall').click(function () {
		            var listCheckedArray = $('.J_allListBox .J_allList:checked');
		            if (listCheckedArray.length) {
		            	var url = "{:U('del_jobs_apply')}";
		                var qsDialog = $(this).dialog({
					        title: 'Delete resumes',
			                loading: true,
			                border: false,
			                footer: false
			            });
		                $.getJSON(url, function (result) {
		                    if (result.status == 1) {
		                    	qsDialog.hide();
				                var qsDialogSon = $(this).dialog({
				                    title: 'Delete resumes',
				                    content: result.data.html,
				                    border: false,
				                    yes: function () {
				                    	$("#form1").attr('action',"{:U('del_jobs_apply')}");
		                				$("#form1").attr('target',"_self");
				                        $("#form1").submit();
				                    }
				                });
		                    } else {
		                    	qsDialog.hide();
		                        disapperTooltip('remind', result.msg);
		                    }
		                });
		            } else {
		                disapperTooltip("remind", "Please select the resumes you need to delete");
		            }
		        });
				$('.J_interview').click(function(){
					var qsDialog = $(this).dialog({
		        		title: 'Send Invitation',
						loading: true,
						showFooter: false,
						yes: function() {
							var notesVal = $.trim($('input[name="notes"]').val());
							if (notesVal.length > 40) {
								$('input[name="notes"]').focus();
								disapperTooltip('remind','最多输入40个字');
								return false;
							}
							$('.J_btnyes').val('发送中...');
							$.post("{:U('company/jobs_interview_add')}",$('#J_interviewWrap').serialize(),function(result){
								if(result.status == 1){
									disapperTooltip('success',result.msg);
									setTimeout(function () {
										window.location.reload();
									}, 2000);
								} else {
									$('.J_btnyes').val('OK');
									disapperTooltip('remind',result.msg);
								}
							},'json');
						}
					});
					qsDialog.setCloseDialog(false);
					var resume_id = $(this).attr('resume_id');
					$.getJSON("{:U('company/jobs_interview_add')}",{id:resume_id},function(result){
			    		if(result.status == 1){
			    			qsDialog.setContent(result.data);
        					qsDialog.showFooter(true);
							laydate({
								elem: '#date',
                        		min: laydate.now()
							})
			    		}else{
			    			qsDialog.setContent('<div class="confirm">' + result.msg + '</div>');
			    		}
			    	});
				});
				$("#send_to_email").click(function(){
					var $checkArr = $('.J_allList:checked');
					if($checkArr.length<=0){
						disapperTooltip('remind', 'Please seelct a resume');
						return false;
					}
					var valArr = new Array();
					$.each($checkArr, function(){
						if($(this).attr('resume_id')){
							valArr.push($(this).attr('resume_id'));
						}
					});
					if(valArr.length == 0){
						disapperTooltip('remind','The resume is not exist!');
						return false;
					}
					var qsDialog = $(this).dialog({
		                title: '转发到邮箱',
		                loading: true,
		                border: false,
		                footer: false
		            });
					
					$.getJSON("{:U('company/send_to_email')}",{resume_id:valArr},function(result){
						if(result.status==1){
							qsDialog.hide();
							var qsDialogSon = $(this).dialog({
				                title: '转发到邮箱',
				                content: result.data,
				                btns: ['发送', '取消'],
				                border: false,
				                yes: function () {
				                	qsDialogSon.setCloseDialog(false);
				                	var email = $("#send_to_email_val").val();
				                	var regularEmail = /^[_\.0-9a-zA-Z-]+[_0-9a-zA-Z-]@([0-9a-zA-Z][0-9a-zA-Z-]+\.)+[a-zA-Z]{2,3}$/;
				                	if(email==''){
				                		disapperTooltip('remind','请填写邮箱');
										return false;
				                	}
				                	if (email != "" && !regularEmail.test(email) || email.split("@")[0].length > 20) {
										disapperTooltip("remind", "邮箱格式不正确");
										return false;
									}
				                    $('.J_btnyes').val('发送中...').prop('disabled', !0);
				                    $.post("{:U('company/send_to_email')}",{email:email,resume_id:valArr},function(result){
				                    	if(result.status==1){
				                    		qsDialogSon.hide();
				                    		disapperTooltip('success',result.msg);
				                    	} else {
				                    		$('.J_btnyes').val('发送').prop('disabled', 0);
				                    		disapperTooltip('remind',result.msg);
				                    	}
				                    },'json');
				                }
				            });
						} else {
							qsDialog.hide();
							disapperTooltip('remind',result.msg);
						}
					});
				});
			});
		</script>
	</body>
</html>