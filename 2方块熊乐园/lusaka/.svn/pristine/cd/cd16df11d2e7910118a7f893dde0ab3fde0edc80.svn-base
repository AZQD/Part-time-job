<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<include file="public:meta" />
	<link href="../public/css/personal/common.css" rel="stylesheet" type="text/css" />
	<link href="../public/css/personal/personal_resume.css" rel="stylesheet" type="text/css" />
	<link href="../public/css/personal/personal_ajax_dialog.css" rel="stylesheet" type="text/css" />
	<script src="../public/js/personal/jquery.common.js" type="text/javascript" language="javascript"></script>
</head>
<body>
	<include file="index_header" />
	<div class="user_main">
		<include file="index_left_nav" />
		<div class="mainbox">
			<div class="tab">
				<a class="li select" > my resume </a>
				<a class="li J_hoverbut"  href="{:U('personal/resume_outward')}"> Resume Outgoing </a>
				<a class="li J_hoverbut" href="{:U('personal/resume_privacy')}"> privacy setting </a>
			  	<div class="clear"></div>
			</div>
			<if condition="$resume_list or $def_resume">
				<div class="J_resumeParent res_list <switch name="def_resume['_audit']"><case value="2">state1</case><case value="3">state0</case></switch>" pid="{$def_resume.id}">
					<div class="td1"> Default resume </div>
					<div class="td2">
						<span class="rname link_gray6 <if condition="$def_resume['display'] eq 0">close</if> substring"><a href="{:url_rewrite('QS_resumeshow',array('id'=>$def_resume['id'],'preview'=>1))}" title="{$def_resume['title']}">{$def_resume['title']}</a></span>
						<div class="state">
							<switch name="def_resume['_audit']">
								<case value="1">
									<span class="font_green"> examination passed </span>
								</case>
								<case value="2">
									<span class="font_yellow"> under review </span>
								</case>
								<case value="3">
									<span class="font_red"> The audit did not pass </span>
								</case>
							</switch>
						</div> 
						<div class="clear"></div>
						<div class="lis1"> Completion ：</div>
						<div class="lis2"><div style="width:{$def_resume['complete_percent']}%;"></div></div>
						<div class="lis3">
							{$def_resume['complete_percent']}%(<if condition="$def_resume['level'] eq 3"><span class="t1"> excellent </span><elseif condition="$def_resume['level'] eq 1"/><span class="t1"> difference </span><else/><span class="t1"> good </span></if>)
						</div>
						<div class="clear"></div>
				  	</div>
					<div class="td3 J_hoverbut" onclick="window.location='{:U('personal/jobs_apply',array('resume_id'=>$def_resume['id']))}'"><div class="val">{$def_resume['countapply']}</div> Have applied for a job </div>
					<div class="td10"></div>
					<div class="td4 J_hoverbut" onclick="window.location='{:U('personal/jobs_interview',array('resume_id'=>$def_resume['id']))}'"><div class="val">{$def_resume['countinterview']}</div> Interview Invitation </div>
					<div class="td10"></div>
					<div class="td5 J_hoverbut" onclick="window.location='{:U('personal/attention_me',array('resume_id'=>$def_resume['id']))}'"><div class="val">{$def_resume['views']}</div> Who is paying attention to me </div>
					<div class="td10"></div>
					<div class="td6">
						<div class="val"> refresh time </div>
						<div class="J_rtime">{:fdate($def_resume['refreshtime'])}</div>
					</div>
					<div class="td7 link_blue">
						<if condition="$def_resume['_audit'] eq 1 && $def_resume['display'] eq 1">
                            <div class="ali"><a class="J_refresh_resume" pid="{$def_resume.id}" href="javascript:;"> Refresh </a></div>
                            <div class="ali"><a href="{:U('personal/resume_edit',array('pid'=>$def_resume['id']))}"> modify </a></div>
                            <div class="ali"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$def_resume['id'],'preview'=>1))}"> Preview </a></div>
							<eq name="def_resume['stick']" value="1">
							<div class="ali link_gray9">
								<div class="for_hover">
								    <a> Stick top </a>
									<div class="des_box">
										<div class="desarrow"></div>
									  	<div class="des_txt">
											<!-- -->
											<strong> bought 【简历 Stick top 】 service </strong><br />
											 Effective time ：{:date('Y-m-d',$def_resume['stick_info']['addtime'])}  to  {:date('Y-m-d',$def_resume['stick_info']['endtime'])}
										</div>
									</div>
								</div>
							</div>
							<else />
							<div class="ali link_yellow"><a href="javascript:;" class="resume_stick" resume_id="{$def_resume['id']}"> Stick top </a></div>
							</eq>
							<eq name="def_resume['strong_tag']" value="0">
							<div class="ali link_yellow"><a href="javascript:;" class="resume_tag" resume_id="{$def_resume['id']}"> label </a></div>
							<else />
							<div class="ali link_gray9">
							<div class="for_hover">
								<a> label </a>
								<div class="des_box">
									<div class="desarrow"></div>
								  	<div class="des_txt">
										<!-- -->
										<strong> bought 醒目 label 【{$def_resume['tag_info']['tag_name']}】</strong><br />
										 Effective time ：{:date('Y-m-d',$def_resume['tag_info']['addtime'])}  to  {:date('Y-m-d',$def_resume['tag_info']['endtime'])}
									</div>
								</div>
							</div>
							</div>
							</eq>
							<div class="ali J_tooltip">
								<a href="javascript:;" class="clink"> More </a>
								<div class="dropdowbox2 J_tooltip_menu">
						            <div class="dropdow_inner2">
						                <ul class="nav_box">
						                	<li><a  class="J_entrust_btn" href="javascript:;">
						                		<empty name="def_resume['entrust']">
													 Commissioned 
												<else/>
													 cancel  Commissioned 
												</empty>
						                	</a></li>
						                    <li><a class="J_tpl_btn" href="javascript:;"> Replace the template </a></li>
						                    <li><a class="J_del_resume" href="javascript:;"> Delete your resume </a></li>
						                </ul>
						            </div>
						        </div>
							</div>
						<elseif condition="$def_resume['_audit'] neq 1"/>
                            <div class="ali link_gray9"><a title=" under review 或未通过简历无法 Refresh "> Refresh </a></div>
                            <div class="ali"><a href="{:U('personal/resume_edit',array('pid'=>$def_resume['id']))}"> modify </a></div>
                            <div class="ali"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$def_resume['id'],'preview'=>1))}"> Preview </a></div>
							<div class="ali link_gray9"><a title=" under review 或未通过简历不能 Stick top 推广"> Stick top </a></div>
							<div class="ali link_gray9"><a title=" under review 或未通过简历不能购买 label "> label </a></div>
							<div class="ali J_tooltip">
								<a href="javascript:;" class="clink"> More </a>
								<div class="dropdowbox2 J_tooltip_menu">
						            <div class="dropdow_inner2">
						                <ul class="nav_box">
						                	<li><a title=" under review 或未通过简历不允许 Commissioned 投递"> Commissioned </a></li>
						                    <li><a class="J_tpl_btn" href="javascript:;"> Replace the template </a></li>
						                    <li><a class="J_del_resume" href="javascript:;"> Delete your resume </a></li>
						                </ul>
						            </div>
						        </div>
							</div>
						<else/>
							<div class="ali link_gray9"><a title="已 shut down 简历无法 Refresh "> Refresh </a></div>
							<div class="ali"><a href="{:U('personal/resume_edit',array('pid'=>$def_resume['id']))}"> modify </a></div>
							<div class="ali"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$def_resume['id'],'preview'=>1))}"> Preview </a></div>
							<div class="ali link_gray9"><a title="已 shut down 简历不能 Stick top 推广"> Stick top </a></div>
							<div class="ali link_gray9"><a title="已 shut down 简历不能购买 label "> label </a></div>
							<div class="ali J_tooltip">
								<a href="javascript:;" class="clink"> More </a>
								<div class="dropdowbox2 J_tooltip_menu">
									<div class="dropdow_inner2">
										<ul class="nav_box">
											<li><a title="该简历不允许 Commissioned 投递"> Commissioned </a></li>
											<li><a class="J_tpl_btn" href="javascript:;"> Replace the template </a></li>
											<li><a class="J_del_resume" href="javascript:;"> Delete your resume </a></li>
										</ul>
									</div>
								</div>
							</div>
						</if>
						<div class="clear"></div>
					</div>
					<div class="clear"></div>
				</div>
			
				<!--提示 Create a resume  -->
				<if condition="$surplus eq 0">
				<div class="res_list_add link_yellow"> Can be created  <a>{$total}</a>  Resume ， You have created it  <a>{$total}</a>  Copies </div>
				<else />
				<div class="res_list_add link_blue"> You can also create it {$surplus} Resume ，<a id="J_createResumeBtn" href="javascript:;"> Create it now </a></div>
				</if>
				
				<!--备用简历列表 -->
				
				<volist name="resume_list" id="resume">
					<div class="J_resumeParent res_list_extra link_blue J_hoverbut" pid="{$resume.id}">
						<div class="td1"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$resume['id'],'preview'=>1))}" <if condition="$resume['display'] eq 0">class="close"</if> title="{$resume.title}">{$resume.title}</a></div>
						<div class="td2">
							<switch name="resume['_audit']">
								<case value="1">
									<span class="font_green"> examination passed </span>
								</case>
								<case value="2">
									<span class="font_yellow"> under review </span>
								</case>
								<case value="3">
									<span class="font_red"> The audit did not pass </span>
								</case>
							</switch>
						</div>
						<div class="td3"> Completion ：{$resume.complete_percent}%&nbsp;
							(<if condition="$resume['complete_percent'] egt 80"><span class="t1"> excellent </span><elseif condition="$resume['complete_percent'] lt 60"/><span class="t1"> difference </span><else/><span class="t1"> good </span></if>)
						</div>
						<div class="td4"> refresh time ：<span class="J_rtime">{:fdate($resume['refreshtime'])}</span></div>
						<div class="td5"><a href="{:U('personal/resume_edit',array('pid'=>$resume['id']))}"> modify </a></div>
						<div class="td6"><a target="_blank" href="{:url_rewrite('QS_resumeshow',array('id'=>$resume['id'],'preview'=>1))}"> Preview </a></div>
						<div class="td7">
							<if condition="$resume['def']">
								<span class="font_yellow"> Resume </span>
							<else/>
								<a class="set_def" href="{:U('personal/set_default',array('pid'=>$resume['id']))}"> set as Default </a>
							</if>
						</div>
						<div class="td8 J_tooltip">
							<a href="javascript:;"> More </a>
							<div class="dropdowbox2 J_tooltip_menu">
					            <div class="dropdow_inner2">
					                <ul class="nav_box">
					                	<if condition="$resume['_audit'] eq 1 && $resume['display'] eq 1">
                                            <li><a class="J_refresh_resume" pid="{$resume.id}" href="javascript:;"> Refresh </a></li>
						                	<neq name="resume['stick']" value="1">
											<li><a href="javascript:;" class="resume_stick" resume_id="{$resume['id']}"> Stick top </a></li>
											<else />
											<li class="link_gray6"><a title=" bought 【简历 Stick top 】 service ; Effective time ：{:date('Y-m-d',$resume['stick_info']['addtime'])}  to  {:date('Y-m-d',$resume['stick_info']['endtime'])}"> Stick top </a></li>
											</neq>
											<eq name="resume['strong_tag']" value="0">
											<li><a href="javascript:;" class="resume_tag" resume_id="{$resume['id']}"> label </a></li>
											<else />
											<li class="link_gray6"><a title=" bought 醒目 label 【{$resume['tag_info']['tag_name']}】; Effective time ：{:date('Y-m-d',$resume['tag_info']['addtime'])}  to  {:date('Y-m-d',$resume['tag_info']['endtime'])}"> label </a></li>
											</eq>
											<li><a class="J_entrust_btn" href="javascript:;"><if condition="$resume['entrust']"> cancel  Commissioned <else/> Commissioned </if></a></li>
										</if>
					                    <li><a class="J_tpl_btn" href="javascript:;"> Replace the template </a></li>
					                    <li><a class="J_del_resume" href="javascript:;"> Delete your resume </a></li>
					                </ul>
					            </div>
					        </div>
						</div>
						<div class="clear"></div>
					</div>
				</volist>
				<!--备用简历列表结束 -->
			<else/>
			    <div class="res_empty">
					 Resume is a weapon for job search ， Fill in your resume to find a good job ！<br />
					去填写一 Copies  excellent 质的简历吧， serious person ， In order to allow serious business to find you ！
				</div>
			    <div class="res_empty_addbox">
					<div class="but_blue_115 J_hoverbut" onclick="window.location='{:U('resume/resume_add')}'"> Create a resume </div>
				</div>
			</if>
		</div>
		<div class="clear"></div>
	</div>
	<include file="index_footer" />
	<script type="text/javascript" src="../public/js/jquery.modal.userselectlayer.js"></script>
	<script type="text/javascript">
		$('.J_refresh_resume').click(function(){
        	var f = $(this),
        		pid = $(this).attr('pid');
			$.post("{:U('Personal/refresh_resume')}",{pid:pid},function(result){
				if(result.status == 1){
					if(result.data){
						f.closest('.J_resumeParent').find('.J_rtime').html(' just ');
						disapperTooltip("goldremind", ' Refresh 简历增加'+result.data+'{:C('qscms_points_byname')}<span class="point">+'+result.data+'</span>');
					}else{
						disapperTooltip('success',result.msg);
					}
					// window.location.reload();
				}else{
					disapperTooltip('remind',result.msg);
				}
			},'json');
        });
        $('.J_del_resume').click(function(){
        	var f = $(this).closest('.J_resumeParent'),
        		id = f.attr('pid');
        	var qsDialog=$(this).dialog({
				title: ' Delete your resume ',
				loading: true,
				border: false,
				yes: function() {
					var could = $("#hidden_id").val();
					if(could==1){
						$.post("{:U('Personal/set_del_resume')}",{id:id},function(result){
			        		if(result.status == 1){
			        			disapperTooltip('success',result.msg);
			        			setTimeout(function () {
			                        window.location.reload();
			                    }, 2000);
			        		}else{
			        			disapperTooltip('remind',result.msg);
			        		}
			        	},'json');
					}else{
						window.location.href="{:U('resume_privacy')}";
					}
				}
			});
			$.getJSON("{:U('Personal/set_del_resume')}",{id:id},function(result){
        		if(result.status == 1){
        			qsDialog.setContent(result.data.html);
        			if(result.data.hidden_val==1){
        				qsDialog.setBtns([' determine ', ' cancel ']);
        			}else{
        				qsDialog.setBtns([' privacy setting ', ' cancel ']);
        			}
        		}else{
        			disapperTooltip('remind',result.msg);
        		}
        	});
        });
        $('#J_createResumeBtn').click(function(){
        	var qsDialog = $(this).dialog({
        		title: ' Please select the resume creation method ',
				loading: true,
				showFooter: false,
				yes: function() {
					var pid = parseInt($('#J_resume_id').val());
					if(pid>0){
						window.location = qscms.root + '?m=Home&c=Personal&a=copy_resume&pid='+pid;
					}else{
						window.location = "{:U('Personal/resume_add')}";
					}
				}
			});
        	$.getJSON("{:U('Personal/resume_create_type')}",function(result){
        		if(result.status == 1){
        			qsDialog.setContent(result.data);
        			qsDialog.showFooter(true);
        		}else{
        			qsDialog.setContent('<div class="confirm">' + result.msg + '</div>');
        		}
        	});
        });
        $('.J_entrust_btn').click(function(){
        	var f = $(this),
        		pid = $(this).closest('.J_resumeParent').attr('pid');
        	var resultEntrustVal = 0;
        	var qsDialog = $(this).dialog({
				loading: true,
				showFooter: false,
				yes: function() {
					if (resultEntrustVal) {
						$.post("{:U('Personal/set_entrust_del')}",{pid:pid},function(result){
							if(result.status == 1){
			        			disapperTooltip('success',result.msg);
			        			f.text(' Commissioned ');
			        		}else{
			        			disapperTooltip('remind',result.msg);
			        		}
						},'json');
					} else {
						var entrust = $('#J_entrust_time').val();
						$.post("{:U('Personal/set_entrust')}",{pid:pid,entrust:entrust},function(result){
							if(result.status == 1){
			        			disapperTooltip('success',result.msg);
			        			f.text(' cancel  Commissioned ');
			        		}else{
			        			disapperTooltip('remind',result.msg);
			        		}
						},'json');
					}
				}
			});
        	$.getJSON("{:U('Personal/entrust')}",{pid:pid},function(result){
        		if(result.status == 1){
        			resultEntrustVal = eval(result.data.entrust);
        			var dialogTitle = resultEntrustVal == 0 ? ' Commissioned 投递' : ' cancel  Commissioned ';
        			qsDialog.setTitle(dialogTitle);
        			qsDialog.setContent(result.data.html);
        			if (resultEntrustVal) {
        				$('.J_radioitme_parent_entrust .J_radioitme.checked').siblings('.J_radioitme').removeClass('J_radioitme');
        			}
        			if(resultEntrustVal==0){
        				qsDialog.setBtns([' save ', ' cancel ']);
        			}else{
        				qsDialog.setBtns([' cancel  Commissioned ', ' shut down ']);
        			}
        			qsDialog.showFooter(true);
        		}else{
        			qsDialog.setContent('<div class="confirm">' + result.msg + '</div>');
        		}
        	});
        });
        $('.J_tpl_btn').click(function(){
        	var pid = $(this).closest('.J_resumeParent').attr('pid');
        	var qsDialog = $(this).dialog({
        		title: ' Replace the template ',
				loading: true,
				showFooter: false,
				btns: [' use immediately ', ' cancel '],
				yes: function() {
					var tpl = $('#J_tplVal').val();
					$.post("{:U('Personal/set_tpl')}",{pid:pid,tpl:tpl},function(result){
						if(result.status == 1){
		        			disapperTooltip('success',result.msg);
		        		}else{
		        			disapperTooltip('remind',result.msg);
		        		}
					},'json');
				}
			});
        	$.getJSON("{:U('Personal/resume_tpl')}",{pid:pid},function(result){
        		if(result.status == 1){
        			qsDialog.setContent(result.data.html);
        			qsDialog.showFooter(true);
        		}else{
        			qsDialog.setContent('<div class="confirm">' + result.msg + '</div>');
        		}
        	});
        });
        $(".resume_stick").click(function(){
        	var qsDialog = $(this).dialog({
        		title: '简历 Stick top ',
        		loading:true,
				showFooter: false
			});
			var url = "{:U('PersonalService/resume_stick')}";
			var resume_id = $(this).attr('resume_id');
			$.getJSON(url,{resume_id:resume_id},function(result){
				qsDialog.setContent(result.msg);
			});
        });
        $(".resume_tag").click(function(){
        	var qsDialog = $(this).dialog({
        		title: '简历 label ',
        		loading:true,
				showFooter: false
			});
			var url = "{:U('PersonalService/resume_tag')}";
			var resume_id = $(this).attr('resume_id');
			$.getJSON(url,{resume_id:resume_id},function(result){
				qsDialog.setContent(result.msg);
			});
        });
        $(".set_def").click(function(){
        	var url = $(this).attr('href');
        	$.getJSON(url,function(result){
        		if(result.status==1){
        			disapperTooltip('success',result.msg);
        			setTimeout(function () {
                        window.location.reload();
                    }, 2000);
        		}else{
        			disapperTooltip('remind',result.msg);
        		}
        	});
        	return false;
        });
	</script>
</body>
</html>