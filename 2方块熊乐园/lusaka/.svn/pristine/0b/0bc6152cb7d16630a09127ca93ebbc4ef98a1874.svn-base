<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<include file="public:meta" />
	<link href="../public/css/members/common.css" rel="stylesheet" type="text/css" />
	<script src="../public/js/members/jquery.common.js" type="text/javascript" language="javascript"></script>
</head>
<body>
	<include file="header" />
	<div class="find_pwd">
		<div class="step s2"></div>
		<div class="steptxt">
			<div class="tli font_blue">1.Verify</div>
			<div class="tli font_blue">2.Set new password</div>
			<div class="tli">3.Complete</div>
			<div class="clear"></div>
		</div>
		<div class="rl J_focus">
			<form class="J_passwordalert_group" id="setPassForm" action="{:U('members/user_setpass')}" method="post" onkeydown="if(event.keyCode==13){return false;}">
				<div class="J_validate_group">
					<div class="td1">
						<input class="input_295_34 J_passwordalert" name="password" id="password" type="password" placeholder="new password"/>
					</div>
					<div class="td2 J_showtip_box"></div>
					<div class="clear"></div>
				</div>
				<div class="safety">
					<div class="slist t1">danger</div>
					<div class="slist t2">normal</div>
					<div class="slist t3">safe</div>
					<div class="clear"></div>
				</div>
				<div class="J_validate_group">
					<div class="td1">
						<input class="input_295_34" name="password1" id="password1" type="password" placeholder="re-enter password"/>
					</div>
					<div class="td2 J_showtip_box"></div>
					<div class="clear"></div>
				</div>
				<div class="btnbox">
					<input type="hidden" name="token" value="{$token}" />
					<input name="" type="submit" value="Next" class="btn_reg J_hoverbut" />
				</div>
			</form>
		</div>
	</div>
	<!--下方阴影 -->
	<div class="find_pwd_bg">
		<div class="bl"></div>
		<div class="br"></div>
		<div class="clear"></div>
	</div>
	<include file="public:footer_min" />
	<script type="text/javascript" src="../public/js/jquery.validate.js"></script>
	<script type="text/javascript" src="../public/js/members/jquery.pwdalert.js"></script>
	<script type="text/javascript">
		$("#setPassForm").validate({
	        rules: {
	            password: {
                        required: true,
                        rangelength: [6, 16]
                },
                password1: {
                    required: true,
                    rangelength: [6, 16],
                    equalTo: "#password"
                }
	        },
	        messages: {
                password: {
                    required: '<div class="ftxt">Please enter password</div><div class="fimg"></div>',
                    rangelength: '<div class="ftxt">Password should be 6 to 16 chars</div><div class="fimg"></div>'
                },
                password1: {
                    required: '<div class="ftxt">Please re-enter password</div><div class="fimg"></div>',
                    rangelength: '<div class="ftxt">Password should be 6 to 16 chars</div><div class="fimg"></div>',
                    equalTo: '<div class="ftxt">Passwords are inconsistent</div><div class="fimg"></div>'
                }
	        },
	        errorClasses: {
                password: {
                    required: 'tip err',
                    rangelength: 'tip err'
                },
                password1: {
                    required: 'tip err',
                    rangelength: 'tip err',
                    equalTo: 'tip err'
                }
	        },
	        tips: {
	            password: '<div class="ftxt">Password should be 6 to 16 chars</div><div class="fimg"></div>',
                password1: '<div class="ftxt">Please re-enter password</div><div class="fimg"></div>'
	        },
	        tipClasses: {
	            password: 'tip',
               	password1: 'tip'
	        },
	        errorElement: 'span',
	        errorPlacement: function(error, element) {
	            element.closest('.J_validate_group').find('.J_showtip_box').append(error);
	        },
	        success: function(label) {
	            label.append('<div class="ok"></div>');
	        }
	    });
	</script>
</body>
</html>