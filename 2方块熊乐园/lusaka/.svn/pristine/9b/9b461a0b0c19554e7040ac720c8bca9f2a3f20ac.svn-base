			<div class="clear"></div>
		</div>
		<include file="index_footer" />
		<script src="../public/js/company/jquery.zclip.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			$(document).ready(function(){
				$('.qshowa').zclip({
					path: '../public/flash/ZeroClipboard.swf',
					copy: function(){
						return $('.qshowaBoxD').html();
					},
					afterCopy: function(){
						$('.qshowa').html(' Copy successful !');
					}
				});

				//  Automatically scroll 
				var _scrolling = setInterval("AutoScroll()", 3000);
				$("#slide>ul").hover(function() {
					// Mouse movement DIV Stop on 
					clearInterval(_scrolling);
				}, function() {
					// Leave to continue calling 
					_scrolling = setInterval("AutoScroll()", 3000);
				});
			});
			function AutoScroll() {
				var _scroll = $("#slide>ul");
				//ul Move to the left 300px
				_scroll.animate({
					marginLeft : "-208px"
				}, 1000, function() {
					// Put the first one li Lose the last to go 
					_scroll.css({
						marginLeft : 0
					}).find("li:first").appendTo(_scroll);
				});
			}
		</script>
	</body>
</html>