<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <include file="public:meta"/>
    <link href="../public/css/personal/common.css" rel="stylesheet" type="text/css"/>
    <link href="../public/css/personal/personal_favorites.css" rel="stylesheet" type="text/css"/>
    <link href="../public/css/personal/personal_ajax_dialog.css" rel="stylesheet" type="text/css"/>
    <script src="../public/js/personal/jquery.common.js" type="text/javascript" language="javascript"></script>
</head>
<body>
<include file="index_header"/>
<div class="user_main">
    <include file="index_left_nav"/>
    <div class="mainbox">
        <!--职位切换卡 -->
        <div class="tab">
            <a class="li J_hoverbut" href="{:U('personal/jobs_favorites')}"> Job collection </a>
            <a class="li select"> Concerned about the business </a>
            <a class="li J_hoverbut" href="{:U('personal/jobs_subscribe')}"> Job Subscriber </a>
            <div class="clear"></div>
        </div>
        <!--切换卡结束 -->
        <div class="concern">
            <notempty name="company['list']">
                <volist name="company['list']" id="company" key="k">
                    <div class="list J_hoverbut">
                        <div class="comlogo">
                            <a href="{:url_rewrite('QS_companyshow',array('id'=>$company['id']))}">
                                <img src="<if condition=" $company['logo']">{:attach($company['logo'],'company_logo')}
                            <else/>
                            {:attach('no_logo.png','resource')}</if>" width="120" height="120" />
                            </a>
                        </div>
                        <div class="com">
                            <div class="comname link_gray6 substring"><a target="_blank" href="{:url_rewrite('QS_companyshow',array('id'=>$company['id']))}">{$company.companyname}</a>
                            </div>
                            <if condition="$company['jobs_count'] eq 0">
                                <div class="jobs_count"> The company currently no job ！</div>
                                <else/>
                                <volist name="company['jobs_list']" id="jobs">
                                <div class="jobs link_blue substring">
                                        <a target="_blank" href="{$jobs.jobs_url}">{$jobs['jobs_name']}</a>
                                </div>
                                    <div class="salary substring">{$jobs['wage_cn']}</div>
                                    <div class="clear"></div>
                                </volist>
                                <div class="more link_gray9"><a target="_blank" href="{:url_rewrite('QS_companyjobs',array('id'=>$company['id']))}"> View all the positions of the company ({$company['jobs_count']})>></a>
                                </div>
                            </if>
                        </div>
                        <div class="clear"></div>
                        <div class="J_delCompany del" iid="{$company.id}"></div>
                    </div>
                </volist>
                <else/>
                <if condition="$hasget">
                    <div class="res_empty">
                         Sorry ， No records found to match your criteria ， We recommend that you review the filter criteria and try again 
                    </div>
                    <else/>
                    <div class="res_empty link_blue">
                         You are not currently interested in any business ， Want to know about your business <br/> Search for the business I am interested in ！ immediately  <a href="{:url_rewrite('QS_jobs')}" target="_blank"> Search business </a>
                    </div>
                </if>
            </notempty>
            <div class="clear"></div>
        </div>
        <div class="qspage">{$company.page}</div>
    </div>
    <div class="clear"></div>
</div>
<include file="index_footer"/>
<script type="text/javascript">
    var is_exe = !1;
    $('.J_delCompany').click(function () {
        var url = "{:U('Personal/del_focus_company')}";
        var id = $(this).attr('iid');
        var qsDialog = $(this).dialog({
            title: '删除 Concerned about the business ',
            loading: true,
            border: false,
            yes: function () {
                if (is_exe) return !0;
                is_exe = !0;
                $.post(url, {id: id}, function (result) {
                    if (result.status == 1) {
                        window.location.reload();
                    } else {
                        disapperTooltip('remind', result.msg);
                    }
                    is_exe = !1;
                }, 'json');
            }
        });
        $.getJSON(url, {id: id}, function (result) {
            if (result.status == 1) {
                qsDialog.setContent(result.data.html);
            } else {
                disapperTooltip('remind', result.msg);
            }
        });
    });
</script>
</body>
</html>