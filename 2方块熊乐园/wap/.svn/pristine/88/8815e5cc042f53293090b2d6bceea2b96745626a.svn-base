<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <include file="public:meta"/>
    <link href="../public/css/personal/common.css" rel="stylesheet" type="text/css"/>
    <link href="../public/css/personal/personal_user.css" rel="stylesheet" type="text/css"/>
    <link href="../public/css/personal/personal_ajax_dialog.css" rel="stylesheet" type="text/css"/>
    <script src="../public/js/personal/jquery.common.js" type="text/javascript" language="javascript"></script>
</head>
<body>
<include file="Personal:index_header"/>
<div class="user_main">
    <include file="Personal:index_left_nav"/>
    <div class="mainbox">
        <!--切换卡 -->
        <div class="tab">
            <a class="li J_hoverbut" href="{:U('index')}"> mine {:C('qscms_points_byname')}</a>
            <a class="li J_hoverbut " href="{:U('task')}"> mine 任务</a>
            <a class="li J_hoverbut " href="{:U('increment')}"> Value-added services </a>
            <a class="li J_hoverbut" href="{:U('order_list')}"> Service order </a>
            <notempty name="apply['Mall']">
                <a class="li select"> Mall orders </a>
            </notempty>
            <div class="clear"></div>
        </div>
        <!--切换卡结束 -->

        <notempty name="order['list']">
            <div class="resume_tip">
                <div class="tiptit"> hint </div>
                <div class="tiptxt link_blue"> Order since date of creation ， exceed 15 Day did not finish payment ， The system will automatically cancel the order </div>
            </div>
            <div class="order_list_th">
                <div class="th1"> Order content </div>
                <div class="th2">
                     The number of redemption 
                </div>
                <div class="th3">
                    <div class="th_select input_140_30_div J_hoverinput J_dropdown J_listitme_parent">
                    <span class="J_listitme_text"><if condition="$Think.get.status eq '2'"> completed <elseif
                            condition="$Think.get.status eq '1'"/> Pending review <elseif condition="$Think.get.status eq '3'"/> Did not pass <else/> Order Status </if></span>
                        <div class="dropdowbox13 J_dropdown_menu">
                            <div class="dropdow_inner13">
                                <ul class="nav_box">
                                    <li><a class="J_listitme" href="{:P(array('status'=>0))}"> All </a></li>
                                    <li><a class="J_listitme" href="{:P(array('status'=>1))}"> Pending review </a></li>
                                    <li><a class="J_listitme" href="{:P(array('status'=>2))}"> completed </a></li>
                                    <li><a class="J_listitme" href="{:P(array('status'=>'3'))}"> Did not pass </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="th5"> Amount of money </div>
                <div class="clear"></div>
            </div>
            <volist name="order['list']" id="vo">
                <div class="order_list">
                    <div class="td1 link_blue">
                        <a target="_blank" href="{:url_rewrite('QS_goods_show',array('id'=>$vo['goods_id']))}">{$vo['goods_title']}</a>
                        <br/>
                         order time ：{:date('Y-m-d H:i',$vo['addtime'])}
                    </div>
                    <div class="td2">{$vo['goods_num']}</div>
                    <div class="td3">
                        <if condition="$vo['status'] eq 1"> Pending review 
                            <elseif condition="$vo['status'] eq 2"/>
                             completed 
                            <elseif condition="$vo['status'] eq 3"/>
                             Did not pass 
                        </if>
                    </div>
                    <div class="td5">{$vo['order_points']}</div>
                    <div class="clear"></div>
                </div>
            </volist>
            <div class="qspage">{$order.page}</div>
            <else/>
            <div class="res_empty">
                您暂时还没有 Mall orders 记录
            </div>
        </notempty>
    </div>
    <div class="clear"></div>
</div>
<include file="Personal:index_footer"/>
</body>
</html>