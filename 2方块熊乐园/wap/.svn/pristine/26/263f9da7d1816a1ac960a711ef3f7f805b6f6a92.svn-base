<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<include file="public:meta" />
		<link href="../public/css/company/common.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_user.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_ajax_dialog.css" rel="stylesheet" type="text/css" />
		<script src="../public/js/company/jquery.common.js" type="text/javascript" language="javascript"></script>
	</head>
	<body>
		<include file="index_header" />
		<div class="user_main">
			<div class="mleft">
				<include file="left_user" /> </div>
			<div class="mright">
				<div class="user_pagetitle">
					<div class="pat_l"> Enterprise style </div>
					<div class="clear"></div>
				</div>
				<div class="user_tip w680">
					<div class="tiptit"> hint </div>
					<div class="tiptxt">
					 Up to upload  <span class="s_link_blue">8</span>  Zhang ， uploaded  <span class="s_link_blue" id="upload_count">{$count}</span>  Zhang ，每 Zhang 最大800KB， stand by jpg/gif/bmp/png format 。
					</div>
				</div>
				<div class="img_wrap">
					<volist name="company_img" id="vo">
					<div class="img_item">
						<div class="img_main">
							<img src="{:attach($vo['img'],'company_img')}" width="198" height="148" alt="img" title="{$vo['title']}">
						</div>
						<div class="img_foot">
							<div class="date fl">{$vo['addtime']|date="Y-m-d",###}（<switch name="vo['audit']"><case value="0"> Not audited </case><case value="1"><span style="color:#339900"> examination passed </span></case><case value="2"><span style="color: #FF9900"> Moderated </span></case><case value="3"><span style="color: #FF0000"> Did not pass </span></case></switch>）
							</div>
							<div class="op link_blue fl">
								<a href="javascript:;" class="remark" pid="{$vo['id']}" url="{:U('set_company_img_title',array('id'=>$vo['id']))}"> Remarks </a>
								<span class="split">|</span>
								<a class="del" href="javascript:;" url="{:U('del_company_img',array('id'=>$vo['id']))}"> delete </a>
							</div>
							<div class="clear"></div>
						</div>
					</div>
					</volist>
					<div class="img_item">
						<div id="hidden_file" class="img_add" name="company_img"></div>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
	</body>
	<include file="index_footer" />
	<script src="../public/js/ajaxfileupload.js" type="text/javascript" language="javascript"></script>
	<script src="../public/js/qscms.js" type="text/javascript" language="javascript"></script>
	<script type="text/javascript">
		var comid = "{$company_profile['id']}";
		$.upload("#hidden_file",{company_id:comid,type:'company_img'},function(result){
			var html = '<div class="img_item"><div class="img_main">';
				html+= '<img src="'+result.data.path+'" width="198" height="148" alt="img">';
				html+= '</div><div class="img_foot">';
				html+= '<div class="date fl">'+result.data.date+'（ Moderated ）</div>';
				html+= '<div class="op link_blue fl">';
				html+= '<a href="javascript:;" class="remark" pid="'+result.data.id+'" url="'+result.data.remarkUrl+'"> Remarks </a><span class="split"> | </span>';
				html+= '<a class="del" href="javascript:;" url="'+result.data.deleteUrl+'"> delete </a>';
				html+= '</div><div class="clear"></div></div></div>';
			$(html).prependTo($(".img_wrap"));
			$("#upload_count").html(parseInt($("#upload_count").html())+1);
			if(result.data.points){
				disapperTooltip("goldremind", '上传 Enterprise style 增加'+result.data.points+'{:C('qscms_points_byname')}<span class="point">+'+result.data.points+'</span>');
			}else{
				disapperTooltip("success", " Added successfully ");	
			}		
		});
		$(".del").live('click',function(){
			var obj = $(this);
			var url = obj.attr('url');
			var qsDialog = $(this).dialog({
                title: ' delete  Enterprise style ',
                loading: true,
                border: false,
                yes: function () {
                    $.getJSON(url,{del:1},function(result){
						if(result.status==1){
							obj.parents('.img_item').remove();
							var num = parseInt($("#upload_count").html());
							if(num>0){
								$("#upload_count").html(num-1);
								disapperTooltip("success", " delete 成功");
							}
						}
					});
                }
            });
            $.getJSON(url, function (result) {
                if (result.status == 1) {
                    qsDialog.setContent(result.data.html);
                } else {
                    disapperTooltip('remind', result.msg);
                }
            });
		});
		$(".remark").live('click',function(){
			var obj = $(this);
			var url = obj.attr('url');
			var id = obj.attr('pid');
			var qsDialog = $(this).dialog({
                title: ' Remarks ',
                loading: true,
                border: false,
                yes: function () {
                	var title = $("#remark").val();
                    $.post(url,{id:id,title:title},function(result){
                    	if(result.status==1){
                    		disapperTooltip("success", result.msg);
                    	}else{
                    		disapperTooltip("remind", result.msg);
                    	}
                    },'json');
                }
            });
			$.getJSON(url,function(result){
				if(result.status==1){
					qsDialog.setContent(result.data);
				}else{
					disapperTooltip("remind", result.msg);
				}
			});
		});
		
	</script>
</html>