<div class="modify_user_dialog">
	<div class="tip">
		 Mail arrives needed 2-3 minute ， please wait patiently ！
	</div>
	<div id="J_emailVerifyWrap" class="content">
        <div class="err J_errbox"></div>
		<div class="td1"><span class="asterisk"></span>&nbsp; your mailbox ：</div>
		<div class="td2">
			<input type="text" value="{$members_info.email}" class="input_245_34" name="email" placeholder=" Please enter your favorite email address ">
		</div>
		<div class="clear"></div>
        <div class="default td1">&nbsp;</div>
        <div class="default td2">
            <div id="J_emailVerifyCode" class="btn_verficode J_hoverbut btn_100_32"> Send a verification email </div>
        </div>
        <div class="clear"></div>
	</div>
</div>
<div class="email_send_success">
     <div class="result_info">
        <div class="top_txt"> Verify that the message has been sent to  </div>
        <div class="email_info_box"></div>
        <div class="down_txt"> please at 24 Sign in to the mailbox to activate the verification email </div>
    </div>
    <div class="btn_group"><a target="_blank" href="" class="btn_blue jump"> Sign in to the mailbox activation now </a></div>
</div>
<script type="text/javascript">
    $('#J_emailVerifyCode').click(function(){
        $('#J_emailVerifyCode').text(' sending ...').addClass('disabled').prop('disabled', !0);
        var email = $('#J_emailVerifyWrap input[name="email"]').val();
        if(email == ''){
            $('#J_emailVerifyWrap .J_errbox').text(' Mailbox can not be empty ！').show();
            return false;
        }
        $.post("{:U('Members/send_email_varify_url')}",{email:email},function(result){
            if(result.status == 1){
                $('.modify_user_dialog').hide();
                $('.email_send_success').show();
                $('.email_info_box').html(email);
                var jump_url = email.substring(email.indexOf('@'));
                jump_url = 'http://mail.'+jump_url.replace(/@/,"");
                $('.jump').attr('href',jump_url);
            } else {
                disapperTooltip('remind',result.msg);
                $('#J_emailVerifyCode').text(' Send a verification email ').removeClass('disabled').prop('disabled', 0);
            }
        },'json');
    });
</script>