<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<include file="public:meta" />
		<link href="../public/css/company/common.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_user.css" rel="stylesheet" type="text/css" />
		<link href="../public/css/company/company_ajax_dialog.css" rel="stylesheet" type="text/css" />
		<script src="../public/js/company/jquery.common.js" type="text/javascript" language="javascript"></script>
		<qscms:load type="category"/>
	</head>
	<body>
		<include file="index_header" />
		<div class="user_main">
			<div class="mleft">
				<include file="left_user" /> </div>
			<div class="mright">
				<div class="user_pagetitle">
					<div class="pat_l"> basic information </div>
					<div class="clear"></div>
				</div>
				<div class="profile_wrap">
					<div class="profile_title"> Basic Information </div>
					<div class="dashed_line"></div>
					<div class="clear"></div>
					<div class="basic_form J_focus pos_rel">
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Company Name ：</div>
							<div class="item_val">
							<if condition="$company_profile['id']">
							<div class="line_substring" title="{$company_profile['companyname']}">{$company_profile['companyname']}</div><span class="sm_tip">（ To change the name of the company, please contact customer service ， Service Hotline ：<span class="num">{:C('qscms_bootom_tel')}</span>）</span>
							<input type="hidden" name="companyname" value="{$company_profile['companyname']}">
							<else />
							<input type="text" class="input_205_34" name="companyname">
							</if>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> The nature of the enterprise ：</div>
							<div class="item_val select_input select_205_34 J_hoverinput J_dropdown J_listitme_parent">
								<span class="J_listitme_text">{$company_profile['nature_cn']|default=" please choose "}</span>
								<div class="dropdowbox8 J_dropdown_menu">
						            <div class="dropdow_inner8">
						                <ul class="nav_box">
						                	<volist name="category['QS_company_type']" id="vo">
						                		<li><a class="J_listitme" href="javascript:;" data-code="{$key}" >{$vo}</a></li>
											</volist>
						                </ul>
						            </div>
						        </div>
								<input class="J_listitme_code" name="nature" type="hidden" value="{$company_profile.nature}" />
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Industry ：</div>
							<div class="item_val select_input select_205_34 J_hoverinput" id="J_showmodal_trade" data-title=" please choose  Industry " data-multiple="false" data-maxnum="0" data-width="682">
								<span title="" class="result J_resuletitle_trade">{$company_profile['trade_cn']|default=" please choose "}</span>
								<input class="J_resultcode_trade" type="hidden" name="trade" id="trade" value="{$company_profile['trade']}">
								<div class="clear"></div>
							</div>
							<div class="clear"></div>
						</div>
						<div class="logo_wrap pos_rel">
							<div class="logo">
								<if condition="$company_profile['logo']">
									<img id="logo_res" width="120" height="120" src="{:attach($company_profile['logo'],'company_logo')}?{:time()}">
								<else />
								<img id="logo_res" width="120" height="120" src="{:attach('no_logo.png','resource')}">
								</if>
							</div>
							<div class="logo_upload" id="hidden_file" name="company_logo">
								<div class="upimg"><div class="up"> Upload logo</div><div class="uptip"> Claim ： Please use JPG,GIF  size ：120*120</div></div>
							</div>
						</div>
						<div class="clear_logo" <if condition="$company_profile['logo']"> style="display:block;"</if>> Cleared </div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Enterprise scale ：</div>
							<div class="item_val select_input select_205_34 J_hoverinput J_dropdown J_listitme_parent">
								<span class="J_listitme_text">{$company_profile['scale_cn']|default=" please choose "}</span>
								<div class="dropdowbox8 J_dropdown_menu">
						            <div class="dropdow_inner8">
						                <ul class="nav_box">
						                	<volist name="category['QS_scale']" id="vo">
						                		<li><a class="J_listitme" href="javascript:;" data-code="{$key}" >{$vo}</a></li>
											</volist>
						                </ul>
						            </div>
						        </div>
								<input class="J_listitme_code" name="scale" type="hidden" value="{$company_profile.scale}" />
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Where the area is ：</div>
							<div class="item_val select_input_multi select_205_34 J_hoverinput" id="J_showmodal_city" data-title=" please choose  Where the area is " data-multiple="false" data-maxnum="0" <if condition="C('qscms_category_district_level') gt 2">data-width="667"<else/>data-width="520"</if> data-category="{:C('qscms_category_district_level')}">
                <span title="" class="result J_resuletitle_city">{$company_profile.district_cn|default=" please choose "}</span>
                <input class="J_resultcode_city" name="districtcategory" id="districtcategory" type="hidden" value="<if condition="$company_profile['district'] || $company_profile['sdistrict'] || $company_profile['tdistrict']">{$company_profile.district}.{$company_profile.sdistrict}.{$company_profile.tdistrict}</if>" />
                <div class="clear"></div>
              </div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"> Registered capital ：</div>
							<div class="item_val">
								<div class="select_input_write">
									<input type="text" class="inputst" dir="no_focus" name="registered" value="{$company_profile.registered}" onkeyup="if(event.keyCode !=37 &amp;&amp; event.keyCode != 39) value=value.replace(/\D/g,'');" onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/\D/g,''))">
									<div class="righttxt for_tooltip J_tooltip J_listitme_parent">
										<span class="J_listitme_text">{$company_profile.currency|default=" Million yuan "}</span>
										<div class="dropdowbox14 J_tooltip_menu">
								            <div class="dropdow_inner14">
								                <ul class="nav_box">
								                    <li><a class="J_listitme" href="javascript:;" data-code=" Million yuan "> Million yuan </a></li>
								                    <li><a class="J_listitme" href="javascript:;" data-code=" Ten thousand U.S. dollars "> Ten thousand U.S. dollars </a></li>
								                </ul>
								            </div>
								        </div>
										<input class="J_listitme_code" name="currency" type="hidden" value="{$company_profile.currency|default=" Million yuan "}"/>
									</div>
									<div class="clear"></div>
								</div>
							</div>
							<div class="item_label"> Corporate website ：</div>
							<div class="item_val"><input type="text" value="{$company_profile.website}" placeholder="http://" class="input_205_34" name="website"></div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"> Corporate welfare ：</div>
							<div class="item_val select_input_multi select_245_34 w518 J_hoverinput" id="J_showmodal_jobtag" data-title=" please choose  Corporate welfare " data-multiple="true" data-maxnum="6" data-width="582">
								<span title="" class="result J_resuletitle_jobtag">{$tagStr['cn']|default=" please choose "}</span>
								<input class="J_resultcode_jobtag" type="hidden" name="tag" id="tag" value="{$tagStr['id']}">
								<div class="clear"></div>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> company profile ：</div>
							<div class="item_val">
								<textarea class="textarea_438_34 w518" rows="" cols="" name="contents">{$company_profile.contents}</textarea>
							</div>
							<div class="clear"></div>
						</div>
					</div>
				</div>

				<div class="profile_wrap">
					<div class="profile_title contact"> Contact information </div>
					<div class="dashed_line"></div>
					<div class="clear"></div>
					<div class="basic_form J_focus">
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Contact person ：</div>
							<div class="item_val">
								<input type="text" value="{$company_profile.contact}" class="input_245_34 fl" name="contact">
								<label class="item_chk fl"><input type="checkbox" name="contact_show" <if condition="$company_profile['contact_show'] eq 0">checked="checked" value="0"<else/>value="1"</if>>  private </label>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> contact number ：</div>
							<div class="item_val">
								<if condition="$user['mobile_audit'] eq '1'">
									<div class="input_unit disabled fl">
							          <input type="text" value="{$user.mobile}" dir="no_focus" class="input_val input_205_34 nopd disabled" name="telephone">
							          <a href="javascript:;" id="J_auth_mobile" class="unit edit">[ modify ]</a>
							        </div>
							    <else />
									<input type="text" value="<if condition="$company_profile['telephone'] neq ''">{$company_profile.telephone}<else />{$user.mobile}</if>" class="input_245_34 fl" name="telephone">
								</if>
								<label class="item_chk fl"><input type="checkbox" name="telephone_show" <if condition="$company_profile['telephone_show'] eq 0">checked="checked" value="0"<else/>value="1"</if>>  private </label>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label">&nbsp;</div>
							<div class="item_val">
								<input type="text" value="{$company_profile['landline_tel_first']}" class="input_110_34 w60 mr4 fl" name="landline_tel_first" placeholder=" Area code ">
								<input type="text" value="{$company_profile['landline_tel_next']}" class="input_110_34 w89 mr4 fl" name="landline_tel_next" placeholder=" Fixed telephone ">
								<input type="text" value="{$company_profile['landline_tel_last']}" class="input_110_34 w52 fl" name="landline_tel_last" placeholder=" Ext ">
								<label class="item_chk fl"><input type="checkbox" name="landline_tel_show" <if condition="$company_profile['landline_tel_show'] eq 0">checked="checked" value="0"<else/>value="1"</if>>  private </label>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> Contact the mailbox ：</div>
							<div class="item_val">
								<if condition="$user['email_audit'] eq '1'">
									<div class="input_unit disabled fl">
							          <input type="text" value="{$user.email}" dir="no_focus" class="input_val input_205_34 nopd disabled" name="email">
							          <a href="javascript:;" class="unit edit" id="J_auth_email">[ modify ]</a>
							        </div>
							    <else />
									<div class="reg-form-content fl">
										<input type="text" value="<if condition="$company_profile['email'] neq ''">{$company_profile.email}<else />{$user.email}</if>" class="input_245_34 inputElem" name="email">
									</div>
								</if>
						        <label class="item_chk fl"><input type="checkbox" name="email_show" <if condition="$company_profile['email_show'] eq 0">checked="checked" value="0"<else/>value="1"</if>>  private </label>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label">QQ：</div>
							<div class="item_val">
								<input type="text" value="<if condition="$company_profile['qq'] neq '' && $company_profile['qq'] neq '0'">{$company_profile.qq}</if>" class="input_245_34 fl" name="qq">
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label"><span class="asterisk"></span> contact address ：</div>
							<div class="item_val fl">
								<input type="text" value="{$company_profile.address}" id="suggestId" class="input_245_34 w415" name="address">
							</div>
							<div class="search fl btn_blue J_hoverbut btn_100_32 btn_inline" id="search"> Accurate search </div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label">&nbsp;</div>
							<div class="item_val">
								<div class="map" id="container" style="height: 300px;border:1px solid #dddddd"></div>
								<div id="searchResultPanel" style="border:1px solid #C0C0C0;width:150px;height:auto; display:none;"></div>
								<input type="hidden" name="map_x" id="map_x">
								<input type="hidden" name="map_y" id="map_y">
								<input type="hidden" name="map_zoom" id="map_zoom">
								<label class="synchro_chk"><input type="checkbox" name="sync" value="1">  modify  Contact information 同步到职 Bit </label>
							</div>
							<div class="clear"></div>
						</div>
						<div class="item">
							<div class="item_label">&nbsp;</div>
							<div class="item_val">
								<div class="btn_blue J_hoverbut btn_115_38" id="save_info"> save </div>
							</div>
							<div class="clear"></div>
						</div>
					</div>
				</div>
				
			</div>
			<div class="clear"></div>
		</div>
	</body>
	<include file="index_footer" />
	<script type="text/javascript" src="../public/js/jquery.modal.userselectlayer.js"></script>
	<script type="text/javascript" src="../public/js/emailAutoComplete.js"></script>
	<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak={:C('qscms_map_ak')}"></script>
	<script type="text/javascript" src="http://api.map.baidu.com/library/DrawingManager/1.4/src/DrawingManager_min.js"></script>
	<script src="../public/js/ajaxfileupload.js" type="text/javascript" language="javascript"></script>
	<script src="../public/js/qscms.js" type="text/javascript" language="javascript"></script>
	<script type="text/javascript" src="../public/js/company/jquery.baidumap.js"></script>
	<script src="http://static.geetest.com/static/tools/gt.js"></script>
	<script type="text/javascript">
		var comid = "{$company_profile['id']}";
		$.upload("#hidden_file",{company_id:comid,type:'company_logo'},function(result){
			$("#logo_res").attr("src",result.data.path);
			if(result.data.points){
				disapperTooltip("goldremind", ' Upload logo increase '+result.data.points+'{:C('qscms_points_byname')}<span class="point">+'+result.data.points+'</span>');
			}else{
				disapperTooltip('success',result.msg);
			}
			$('.clear_logo').show();
		});
		$(document).ready(function(){
			$('.clear_logo').die().live('click',function(){
				var qsDialog = $(this).dialog({
	        		title: ' system hint ',
	        		content: ' enterprise logo代表了 enterprise 的品牌形象，确定要 Cleared  enterprise logo Do you? ？',
					yes: function() {
						$.getJSON("{:U('clear_logo')}",function(result){
							if(result.status==1){
								$("#logo_res").attr("src","{:attach('no_logo.png','resource')}");
								$('.clear_logo').hide();
							}
						});
					}
				});
			});
			/*  save  enterprise  basic information  */
			var regularMobile = /^13[0-9]{9}$|14[0-9]{9}$|15[0-9]{9}$|18[0-9]{9}$|17[0-9]{9}$/; //  Verify the phone number 
			var regularEmail = /^[_\.0-9a-zA-Z-]+[_0-9a-zA-Z-]@([0-9a-zA-Z][0-9a-zA-Z-]+\.)+[a-zA-Z]{2,3}$/; //  Verify the mailbox 
			var regularTelFirst = /^[0-9]{3}[0-9]?$/; //  verification  Area code 
			var regularTelNext = /^[0-9]{6,11}$/; //  Verify the phone number 
			var regularTelLast = /^-?(?:\d+|\d{1,3}(?:,\d{3})+)(?:\.\d+)?$/; //  verification  Ext 码
			var regularWebsite = /^http(s?):\/\/(?:[A-za-z0-9-]+\.)+[A-za-z]{2,4}(:\d+)?(?:[\/\?#][\/=\?%\-&~`@[\]\':+!\.#\w]*)?$/; //  verification  Corporate website 
			var regularQQ = /^[1-9][0-9]{4,}$/; //  verification QQ
			$("#save_info").die().live('click',function(){
				var companyname = $.trim($("input[name=companyname]").val());
				var nature = $.trim($("input[name=nature]").val());
				var trade = $.trim($("input[name=trade]").val());
				var scale = $.trim($("input[name=scale]").val());
				var districtcategory = $.trim($("input[name=districtcategory]").val());
				var registered = $.trim($("input[name=registered]").val());
				var currency = $.trim($("input[name=currency]").val());
				var website = $.trim($("input[name=website]").val());
				var tag = $.trim($("input[name=tag]").val());
				var contents = $.trim($("textarea[name=contents]").val());
				var contact = $.trim($("input[name=contact]").val());
				var telephone = $.trim($("input[name=telephone]").val());
				var landline_tel_first = $.trim($("input[name=landline_tel_first]").val());
				var landline_tel_next = $.trim($("input[name=landline_tel_next]").val());
				var landline_tel_last = $.trim($("input[name=landline_tel_last]").val());
				var email = $.trim($("input[name=email]").val());
				var address = $.trim($("input[name=address]").val());
				var qq = $.trim($("input[name=qq]").val());
				var map_x = $.trim($("input[name=map_x]").val());
				var map_y = $.trim($("input[name=map_y]").val());
				var map_zoom = $.trim($("input[name=map_zoom]").val());
				var sync = $("input[name=sync]").is(":checked")?1:0;
				var contact_show = $("input[name=contact_show]").is(":checked")?0:1;
				var telephone_show = $("input[name=telephone_show]").is(":checked")?0:1;
				var landline_tel_show = $("input[name=landline_tel_show]").is(":checked")?0:1;
				var email_show = $("input[name=email_show]").is(":checked")?0:1;
				var id = "{$company_profile['id']}";
				if (companyname == "") {
					disapperTooltip("remind", "请填写 Company Name ");
					return false;
				}
				if (nature == "0") {
					disapperTooltip("remind", " please choose  The nature of the enterprise ");
					return false;
				}
				if (trade == "0") {
					disapperTooltip("remind", " please choose  Industry ");
					return false;
				}
				if (scale == "0") {
					disapperTooltip("remind", " please choose  Enterprise scale ");
					return false;
				}
				if (districtcategory == "0") {
					disapperTooltip("remind", " please choose  Where the area is ");
					return false;
				}
				if (registered != "" && !regularTelLast.test(registered)) {
					disapperTooltip("remind", " Registered capital 应为数字");
					return false;
				}
				if (registered != "" && !regularTelLast.test(registered) || registered.length > 5) {
					disapperTooltip("remind", " Registered capital 不能超出5 Number of bits ");
					return false;
				}
				if (website != "" && !regularWebsite.test(website)) {
					disapperTooltip("remind", " Corporate website 格式不正确");
					return false;
				}
				if (contents == "") {
					disapperTooltip("remind", "请填写 company profile ");
					return false;
				}
				if (contact == "") {
					disapperTooltip("remind", "请填写 Contact person ");
					return false;
				}
				if (contact != "" && contact.length > 10) {
					disapperTooltip("remind", " Contact person 1-10 The word ");
					return false;
				}
				if(landline_tel_next=="" && telephone=="") {
					disapperTooltip("remind", " Please fill in contact phone or landline ");
					return false;
				} else {
					if (telephone != "" && !regularMobile.test(telephone)) {
						disapperTooltip("remind", " Phone number format is incorrect ");
						return false;
					}
					if (landline_tel_first != "" && !regularTelFirst.test(landline_tel_first)) {
						disapperTooltip("remind", "请填写正确的 Area code ");
						return false;
					}
					if (landline_tel_next != "" && !regularTelNext.test(landline_tel_next)) {
						disapperTooltip("remind", " Phone number is 6-11 Number of bits 字");
						return false;
					}
					if (landline_tel_last != "" && !regularTelLast.test(landline_tel_last)) {
						disapperTooltip("remind", " Ext 码为数字");
						return false;
					}
					if (landline_tel_last != "" && !regularTelLast.test(landline_tel_last) || landline_tel_last.length > 4) {
						disapperTooltip("remind", " Ext 码不能超出4 Bit ");
						return false;
					}
				}
				if (email == "") {
					disapperTooltip("remind", " Contact the mailbox 不能为空");
					return false;
				}
				if (email != "" && !regularEmail.test(email) || email.split("@")[0].length > 20) {
					disapperTooltip("remind", " E-mail format is incorrect ");
					return false;
				}
				if (qq != "" && !regularQQ.test(qq)) {
					disapperTooltip("remind", " Please fill in the correct format QQ");
					return false;
				}
				if (address == "") {
					disapperTooltip("remind", " contact address 不能为空");
					return false;
				}
				if (address != "" && address.length > 30) {
					disapperTooltip("remind", " contact address 不能大于30 The word ");
					return false;
				}
				$(this).html('正在 save ...');
				$(this).addClass('btn_gray9');
				$(this).removeClass('btn_blue');
				$.post("{:U('company/com_info')}",{id:id,companyname:companyname,nature:nature,trade:trade,scale:scale,registered:registered,currency:currency,districtcategory:districtcategory,website:website,tag:tag,contents:contents,contact:contact,telephone:telephone,landline_tel_first:landline_tel_first,landline_tel_next:landline_tel_next,landline_tel_last:landline_tel_last,email:email,address:address,map_x:map_x,map_y:map_y,map_zoom:map_zoom,sync:sync,contact_show:contact_show,telephone_show:telephone_show,landline_tel_show:landline_tel_show,email_show:email_show,qq:qq},function(r){
					if(r.status==1){
						if(r.data){
							disapperTooltip("goldremind", '完善 enterprise 资料 increase '+r.data+'{:C('qscms_points_byname')}<span class="point">+'+r.data+'</span>');
						}else{
							disapperTooltip('success',r.msg);
						}
						var jump_auth = parseInt("{$jump_certificate}");
						if(jump_auth){
							setTimeout(function () {
		                        location.href="{:U('com_auth')}";
		                    }, 2000);
						}
					}else{
						disapperTooltip('remind',r.msg);
					}
					$("#save_info").html(' save ');
					$("#save_info").addClass('btn_blue');
					$("#save_info").removeClass('btn_gray9');
				},'json');
			});

			//  modify 手机
			$('#J_auth_mobile').click(function(){
				var f = $(this);
				var qsDialog = $(this).dialog({
	        		loading: true,
					footer: false,
					header: false,
					border: false,
					backdrop: false
				});
				$.getJSON("{:U('members/user_mobile')}",function(result){
		    		if(result.status == 1){
		    			qsDialog.hide();
		    			var qsDialogSon = $(this).dialog({
			        		title: ' modify 已认证手机',
			        		content: result.data,
							yes: function() {
								var verifycode  = $.trim($('#J_mobileWrap input[name="verifycode"]').val());
								if(!verifycode){
									$('#J_mobileWrap .J_errbox').text('请填写 verification 码！').show();
									return false;
								}
								$.post("{:U('members/verify_mobile_code')}",{verifycode:verifycode},function(result){
									if(result.status == 1){
										f.prev().val(result.data.mobile);
										qsDialogSon.hide();
										if(result.data.points){
											disapperTooltip("goldremind", ' Verify the phone number  increase '+result.data.points+'{:C('qscms_points_byname')}<span class="point">+'+result.data.points+'</span>');
										}else{
											disapperTooltip('success',result.msg);
										}
									}else{
										$('#J_mobileWrap .J_errbox').text(result.msg).show();
									}
								},'json');
							}
						});
						qsDialogSon.setCloseDialog(false);
		    		} else {
		    			qsDialog.hide();
		    			disapperTooltip('remind',result.msg);
		    		}
		    	});
			});
		
			//  modify  Contact the mailbox 
			$('#J_auth_email').click(function(){
				var f = $(this);
				var qsDialog = $(this).dialog({
		    		loading: true,
					footer: false,
					header: false,
					border: false,
					backdrop: false
				});
				$.getJSON("{:U('members/user_email')}",function(result){
		    		if(result.status == 1){
		    			qsDialog.hide();
						var qsDialogSon = $(this).dialog({
			        		title: ' modify 已认证邮箱',
							content: result.data
						});
		    		}else{
		    			qsDialog.hide();
    					disapperTooltip('remind',result.msg);
		    		}
		    	});
			});

			//  Baidu map 
			baidumap("{$company_profile.companyname}","{$company_profile.address}","{$company_profile.map_x}","{$company_profile.map_y}","{$company_profile.map_zoom}","{:C('qscms_map_center_x')}","{:C('qscms_map_center_y')}","{:C('qscms_map_zoom')}");
		});
	</script>
